<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="Tekhael" Height="600" Width="1080">
    <Grid>
        <!--<Image x:Name="LauncherBG" Stretch="UniformToFill" Source="images/LauncherBG.jpg" HorizontalAlignment="Left" Margin="0,0,-325,-10"/>-->
        <Image x:Name="LauncherBG" Source="images/LauncherBG.jpg" Stretch="UniformToFill"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0, 0, 5, 0"/>
        <Button Name="PlayTekhael" Content="Checking for Updates.." Click="PlayTekhael_Click" Height="60" FontSize="28" FontWeight="Bold" Background="#C0BDA6" Foreground="#27413A" Margin="350,490,350,0" VerticalAlignment="Top" MinWidth="150" Padding="10,1,10,1" Opacity="0.9"/>

    </Grid>
</Window>
